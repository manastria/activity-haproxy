{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Appliquer la correction typo",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/scripts/correcteur_typo.py",
                "${file}"
            ],
            "presentation": {
                "reveal": "never",
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": []
        },
        {
        "label": "Batch replace (Python)",
        "type": "shell",
        "command": "python3",
        "args": [
            "${workspaceFolder}/scripts/batch_replace.py",
            "${file}"
        ],
        "problemMatcher": []
        },
        {
        "label": "Batch replace (Python - dry run)",
        "type": "shell",
        "command": "python3",
        "args": [
            "${workspaceFolder}/scripts/batch_replace.py",
            "${file}",
            "--dry-run"
        ],
        "problemMatcher": []
        }
    ]
}